@model ES_WEBKYSO.Models.CFG_DOIGCS_NVIEN

<div style="margin: -15px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@ViewBag.Title</h4>
    </div>

    @using (Html.BeginForm("Create", "CauHinhDoiMacDinh", FormMethod.Post, new { @class = "form-horizontal", name = "frm", id = "frm" }))
    {
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-group focus">
                @Html.EditorFor(x => x.MA_DVIQLY, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.MaDviQly } })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.MA_DOIGCS, new { dropKey = "MA_DOIGCS", label = "--- Chọn đội GCS ---", htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(x => x.USERID, new { dropKey = "USERID", label = "--- Chọn nhân viên ---", htmlAttributes = new { @class = "form-control" } })
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12" align="left">
                    @*@Html.ValidationSummary()*@
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="NVGCS_MacDinhCreate">Lưu lại</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" id="NVGCS_MacDinhClose">Đóng</button>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#frm");
    });
    $(function () {
        $(".focus :input").focus();
    });
    var runSelect2 = function () {
        $(".search-select").select2({
            allowClear: true
        });
    };
    runSelect2();
</script>

@section PageScripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}