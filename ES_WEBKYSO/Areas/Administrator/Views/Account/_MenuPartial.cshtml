@model Administrator.Library.Models.MenuModel
<div class="form-group">
    <label class="col-sm-2 control-label" for="form-field-1">Tên chức năng cha <span class="symbol required"></span></label>
    <div class="col-sm-9">
        <select name="ParentId" class="form-control search-select">
            <option value="00000000-0000-0000-00AA-AAAAAAAAAA00">Root</option>
            @foreach (var item in @ViewBag.listMenu)
            {
                if (Model != null)
                {
                    if (Model.ParentId != null && Model.ParentId != new Guid("00000000-0000-0000-00AA-AAAAAAAAAA00") && Model.ParentId == item.MenuId)
                    { 
                <option value="@item.MenuId"  selected="selected">@item.Name</option>
                    }
                    else
                    {
                <option value="@item.MenuId">@item.Name</option>
                    }
                }
                else
                {
                <option value="@item.MenuId">@item.Name</option>
                }
            }

        </select>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="form-field-1">Tên chức năng <span class="symbol required"></span></label>
    <div class="col-sm-9">
        @Html.TextBoxFor(item => item.Name, new { @class = "form-control", @id = "txtMenu", @placeholder = "Tên chức năng" })
        @Html.ValidationMessageFor(item => item.Name)
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="form-field-1">Số thứ tự <span class="symbol required"></span></label>
    <div class="col-sm-9">
        @Html.TextBoxFor(item => item.Index, new { @class = "form-control", @placeholder = "Số thứ tự" })
        @Html.ValidationMessageFor(item => item.Index)
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="form-field-1">Trang </label>
    <div class="col-sm-9">
        <select name="PageId" class="form-control search-select">
            <option value="00000000-0000-0000-00AA-AAAAAAAAAA00">None</option>
            @foreach (var item in @ViewBag.listPage)
            {
                if (Model != null)
                {
                    if (Model.PageId != null && Model.PageId == item.PageId)
                    { 
                <option value="@item.PageId"  selected="selected">@item.PageTitle</option>
                    }
                    else
                    {
                <option value="@item.PageId">@item.PageTitle</option>
                    }
                }
                else
                {
                <option value="@item.PageId">@item.PageTitle</option>
                }
            }

        </select>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="form-field-1">Icon </label>
    <div class="col-sm-5">
        <span class="input-icon input-icon-right">
            @Html.TextBoxFor(item => item.Style, new { @class = "form-control", @placeholder = "Icon" })
            <i class="fa fa-rocket"></i>
        </span>
        @Html.ValidationMessageFor(item => item.Style)
    </div>
    <label class="checkbox-inline">
        @if (Model == null)
        {
            <input type="checkbox" class="red" name="ShowUp" value="true" checked="checked">
        }
        else if (Model.ShowUp)
        {
            <input type="checkbox" class="red" name="ShowUp" value="true" checked="checked">
        }
        else
        {
            <input type="checkbox" class="red" name="ShowUp" value="true">
        }
        Hiện menu
    </label>
</div>
<div class="row">
    <div class="col-md-12">
        <hr>
    </div>
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
        <input class="btn btn-primary" type="submit" value="Cập nhật" id="btnAdd" style="width: 100px;" />
        <a class="btn btn-dark-grey" href="@Url.Action("MenuConfig")" style="width: 100px;">Thoát
                            <i class="fa fa-arrow-circle-right"></i>
        </a>
    </div>
</div>
