@model Administrator.Library.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="logo" style="font-family: 'Times New Roman'">
    ĐĂNG KÝ
</div>
<div class="box-login">

    <h3 style="font-family: 'Times New Roman'">Đăng ký tài khoản</h3>
  @*  @Html.Partial("_MessagePartial")*@
    <p>
        Nhập thông tin tài khoản:
    </p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="errorHandler alert alert-danger no-display">
            <i class="fa fa-remove-sign"></i>Thông tin bạn cung cấp bị lỗi. Vui lòng kiểm tra lại.
        </div>
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên đăng nhập*" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group">
                <span class="input-icon">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu*" })
                    @Html.ValidationMessageFor(m => m.Password)
                    <i class="fa fa-lock"></i></span>
            </div>
            <div class="form-group">
                <span class="input-icon">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu*" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    <i class="fa fa-lock"></i></span>
            </div>
            <p>
                Nhập thông tin của bạn:
            </p>
            <div class="form-group">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Họ tên*" })
                @Html.ValidationMessageFor(m => m.FullName)
            </div>
            <div class="form-group">
                <span class="input-icon">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email*" })
                    @Html.ValidationMessageFor(m => m.Email)
                    <i class="fa fa-envelope"></i></span>
            </div>
            <div class="form-group">
                <div>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(item => item.GenderId, 1, new { @class = "grey", @checked = "checked" })
                        Nam
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(item => item.GenderId, 0, new { @class = "grey" })
                        Nữ
                    </label>
                </div>
            </div>
            <div class="form-actions">
                <a class="btn btn-light-grey go-back" href="@Url.Action("Index", "Home")">
                    <i class="fa fa-circle-arrow-left"></i>Thoát
                </a>
                <button type="submit" class="btn btn-bricky pull-right">
                    Đăng ký <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
