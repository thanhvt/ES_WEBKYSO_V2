@model List<Administrator.Library.Models.webpages_RolesModel>
@{
    ViewBag.Title = "Authorize";
}

@using (Html.BeginForm("Authorize", "Custom", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="col-md-12">
        <div class="page-header">
            <h1>Quản trị người dùng</h1>
        </div>
        @Html.Partial("_MessagePartial")
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-external-link-square"></i>
                <strong>Danh sách quyền </strong>
                <div class="panel-tools">
                    <p class="btn btn-xs btn-link panel-expand1">
                        <i class="fa fa-resize-full"></i>
                    </p>
                </div>
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.Hidden("UserId", (int)ViewBag.editing)
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th>Tên quyền</th>
                            <th class="hidden-xs">Mô tả</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.EditorForModel()
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div>
        <div class="col-md-8">
        </div>
        <div class="col-md-4">
            <input class="btn btn-primary" type="submit" value="Cập nhật" id="btnAdd" style="width: 100px;" />
            <a class="btn btn-dark-grey" href="@Url.Action("UserManager")" style="width: 100px;">Thoát
                            <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
}
