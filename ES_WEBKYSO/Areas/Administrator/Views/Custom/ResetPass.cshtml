@model Administrator.Library.Models.ResetPassModel
@{
    ViewBag.Title = "ResetPass";
}

<div class="col-sm-12">
    <!-- start: TEXT FIELDS PANEL -->
     <div class="page-header">
        <h1>Quản trị người dùng</h1>
    </div>
    @Html.Partial("_MessagePartial")
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-external-link-square"></i>
            <b>Reset mật khẩu</b>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @using (Html.BeginForm("ResetPass", "Custom"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="form-field-1">
                            Tài khoản
                        </label>
                        <div class="col-sm-9">
                            @Html.HiddenFor(item => item.UserName)
                            @Html.TextBoxFor(item => item.UserName, new { @class = "form-control", @id = "txtUserName", @disabled = "disabled" })
                            @Html.ValidationMessageFor(item => item.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="form-field-1">
                            Mật khẩu mới
                        </label>
                        <div class="col-sm-9">
                            @Html.PasswordFor(item => item.NewPassword, new { @class = "form-control", @id = "txNewPassword" })
                            @Html.ValidationMessageFor(item => item.NewPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="form-field-1">
                            Nhập lại mật khẩu mới
                        </label>
                        <div class="col-sm-9">
                            @Html.PasswordFor(item => item.ConfirmPassword, new { @class = "form-control", @id = "txConfirmPassword" })
                            @Html.ValidationMessageFor(item => item.ConfirmPassword)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                        </div>
                        <div class="col-md-8">
                        </div>
                        <div class="col-md-4">
                            <input type="submit" class="btn btn-primary" value="Cập nhật" id="btnAdd" style="width: 100px;">
                            <a class="btn btn-dark-grey" href="@Url.Action("UserManager")" style="width: 100px;">Thoát
                               
                                <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

