<style>
    .form-group.required .control-label:after {
        content: "*";
        color: red;
    }
</style>
<div style="margin: -15px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@ViewBag.Title</h4>
    </div>
    @using (Html.BeginForm("Update", "DanhMucDoi", FormMethod.Post, new { @class = "form-horizontal", name = "frm", id = "frm" }))
    {
        <div class="modal-body">
            @*<form class="form-horizontal" id="DanhMucDoiForm" method="post" role="form">*@
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(x => x.MA_DOIGCS)
            @Html.HiddenFor(x => x.MA_DVIQLY)
            <div class="form-group">
                @Html.EditorFor(x => x.MA_DVIQLY, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.MaDviQly, @readonly = "readonly" } })
                @Html.EditorFor(model => model.MA_DOIGCS, new { htmlAttributes = new { @class = "form-control" }, autofocus = "autofocus" })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.TEN_DOI)

                
                @Html.EditorFor(x => x.GHI_CHU)
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12" align="left">
                    @Html.ValidationSummary()
                </div>
            </div>
            @*</form>*@

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="DanhMucDoi">Cập nhật</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" id="DanhMucDoiClose">Đóng</button>
        </div>
    }
</div>

